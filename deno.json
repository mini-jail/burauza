{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": true
    }
  },
  "compilerOptions": {
    "lib": ["DOM", "ESNext", "deno.ns"]
  },
  "tasks": {
    "dev": "deno run -A --watch=./src/app.ts,./src/context.ts ./dev.ts dev",
    "prod": "deno run -A ./dev.ts prod",
    "serve": "deno run -A ./mod.ts"
  }
}
