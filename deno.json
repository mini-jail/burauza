{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": true
    }
  },
  "compilerOptions": {
    "lib": ["DOM", "ESNext", "deno.ns"]
  },
  "tasks": {
    "dev": "deno run -A --watch=./src/ ./build.ts dev",
    "build": "deno run -A ./build.ts prod",
    "serve": "deno run -A ./mod.ts"
  }
}
